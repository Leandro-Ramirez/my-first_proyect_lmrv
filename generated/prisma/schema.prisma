generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

// En caso de usar PostGreSql
// datasource db {
//   provider = "postgresql"
//   url      = env("DATABASE_URL")
// }

// En caso de usar SqLite
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  telephone String?
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  role      Role     @default(USER)
}

enum Role {
  USER
  ADMIN
}

model Tenant {
  id       Int      @id @default(autoincrement())
  name     String?
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
